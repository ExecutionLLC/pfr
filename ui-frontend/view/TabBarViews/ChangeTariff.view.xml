<mvc:View controllerName="personal.account.controller.TabBarControllers.ChangeTariff"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:layout="sap.ui.layout"
          xmlns:core="sap.ui.core">
    <Page showHeader="false">
        <layout:Grid width="100%">
            <Label text="Ваш текущий тариф"
                   class="label-margin-top"
            >
                <layoutData>
                    <layout:GridData span="L2 M4 S4"/>
                </layoutData>
            </Label>
            <Input value="{=${mainModel>/tariff} + '%'}"
                   width="34%"
                   type="Text"
                   enabled="false"
            >
                <layoutData>
                    <layout:GridData span="L8 M4 S4"/>
                </layoutData>
            </Input>
            <Slider value="{techModel>/tech/changeTariffTab/selectedTariff}"
                    min="0"
                    max="6"
                    enableTickmarks="true"
                    change="onChangeTariff"
                    enabled="{techModel>/tech/changeTariffTab/isSliderChangeTariffEnabled}"
            >
                <ResponsiveScale tickmarksBetweenLabels="1"/>
                <layoutData>
                    <layout:GridData span="L5 M4 S4"/>
                </layoutData>
            </Slider>
            <Button text="Сменить тариф"
                    press="onApplyChangeTariff"
                    enabled="{techModel>/tech/changeTariffTab/isButtonChangeTariffEnabled}"
            >
                <layoutData>
                    <layout:GridData span="L2 M4 S4" indent="L1 M3 S3"/>
                </layoutData>
            </Button>
            <ObjectStatus
                    class="sapUiSmallMarginTop"
                    text="{techModel>/tech/changeTariffTab/changeTariffMessage}"
                    state="Warning"
            >
                <layoutData>
                    <layout:GridData span="L3 M3 S7" indent="L1 M8 S8"/>
                </layoutData>
            </ObjectStatus>
        </layout:Grid>


        <Label text="История смены тарифа"
               class="sapUiLargeMarginBegin sapUiLargeMarginTop label-font_style"
        />
        <ScrollContainer vertical="false" horizontal="true">
            <Table
                    showNoData="false">
                <columns>
                    <Column hAlign="Center">
                        <Text text="Дата операции"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Тариф"/>
                    </Column>
                    <Column
                            hAlign="Center">
                        <Text text="Статус"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Проверить операцию"/>
                    </Column>
                </columns>
            </Table>
            <ScrollContainer vertical="true" horizontal="false">
                <Table
                        items="{
                    path:'techModel>/tech/changeTariffTab/tariffTableData',
                    sorter : {
                        path : 'timestamp',
                        descending:true
                    }
                }">
                    <columns>
                        <Column
                                hAlign="Center">
                        </Column>
                        <Column
                                hAlign="Center">
                        </Column>
                        <Column
                                hAlign="Center">
                        </Column>
                        <Column
                                hAlign="Center">
                        </Column>
                    </columns>
                    <items>
                        <CustomListItem>
                            <Panel
                                    expandable="true"
                                    expand="false"
                                    width="auto">
                                <headerToolbar>
                                    <Toolbar
                                            width="100%">
                                        <content>
                                            <Text
                                                    textAlign="Center"
                                                    width="17%"
                                                    text="{
                                                path: 'techModel>timestamp',
                                                formatter:'.formatter.formatDateForTable'
                                            }"/>
                                            <Text
                                                    textAlign="Center"
                                                    width="32%"
                                                    text="{techModel>tariff}"/>
                                            <core:Icon
                                                    width="17%"
                                                    src="sap-icon://overlay"
                                                    color="{
                                                                path: 'techModel>isFinished',
                                                                formatter: '.formatter.formatTableItemStatus'
                                                           }"
                                            />
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <content>
                                    <layout:VerticalLayout>
                                        <layout:HorizontalLayout>
                                            <Label text="ID транзакции: ">
                                            </Label>
                                            <Link text="{techModel>transactionHash}"
                                                  href="{
                                                            path: 'techModel>transactionHash',
                                                            formatter: '.formatter.formatTransactionHashHref'
                                                        }"
                                                  target="_blank"
                                            >
                                            </Link>
                                        </layout:HorizontalLayout>

                                        <layout:HorizontalLayout>
                                            <Label text="Отправитель: ">
                                            </Label>
                                            <Text text="{mainModel>/metadata/address}">
                                            </Text>
                                        </layout:HorizontalLayout>

                                        <layout:HorizontalLayout width="100%">
                                            <Label text="Количество подтверждений: ">
                                            </Label>
                                            <Text text="{
                                                            path: 'techModel>isFinished',
                                                            formatter: '.formatter.formatNumberOfConformations'
                                                        }"
                                            />
                                        </layout:HorizontalLayout>
                                    </layout:VerticalLayout>
                                </content>
                            </Panel>
                        </CustomListItem>
                    </items>
                </Table>

            </ScrollContainer>
        </ScrollContainer>
    </Page>

</mvc:View>