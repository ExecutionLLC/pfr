<mvc:View
    controllerName="personal.account.controller.TabBarControllers.Profile"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:suite="sap.suite.ui.commons">
    <Page
        showHeader="false">
        <l:Grid
            defaultSpan="L10 M10 S10"
            class="sapUiSmallMarginTop">
            <l:content>
                <CustomListItem >
                    <content>
                        <HBox
                            height ="7rem"
                            width = "96%"
                            class = "sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <VBox
                                height = "7rem"
                                alignItems ="Center"
                                width = "31%"
                                class="right-border">
                                <HBox
                                    width = "100%"
                                    height = "2rem"
                                    alignItems = "Center"
                                    justifyContent = "SpaceAround"
                                    class = "sapUiSmallMarginEnd">
                                    <Text
                                        text ="Мой НПФ:"
                                        class = "H2"  />
                                    <core:Icon
                                        src="sap-icon://edit-outside"
                                        color = "#346187"
                                        width = "2rem"
                                        height = "2rem"
                                        size= "2rem"
                                        press="onNavToNPF"/>
                                </HBox>
                                <Text
                                    text ="{
                                        path:'mainModel>/npf',
                                        formatter:'.formatter.formatNpfAddressToName'}"
                                    class = "coloredText sapUiTinyMarginTop"/>
                            </VBox>

                            <VBox
                                height ="7rem"
                                width = "34%"
                                class = "right-border" >
                                <Text
                                    text = "{
                                        path:'mainModel>/npf',
                                        formatter:'.formatter.formatNpfAddressToReliability'}"
                                    textAlign = "End"
                                    width="90%"
                                    class="green H2"/>
                                <HBox
                                    alignItems = "Center"
                                    justifyContent = "SpaceAround">
                                    <Image
                                        src="./image/aRate.JPG"
                                        width = '4rem'
                                        height = "4rem"
                                        class = "sapUiSmallMarginBeginEnd"/>
                                    <Text
                                        text = "Рейтинг надежности"
                                        class="H2"/>
                                </HBox>
                            </VBox>

                            <VBox
                                height ="7rem"
                                width = "34%">
                                <Text
                                        text = "{
                                        path:'mainModel>/npf',
                                        formatter:'.formatter.formatNpfAddressToIncomeRate'}"
                                    textAlign = "End"
                                    width="100%"
                                    class="red H2"/>
                                <HBox
                                    alignItems = "Center"
                                    justifyContent = "SpaceAround">
                                    <Image
                                        src="./image/rate.JPG"
                                        width = '4rem'
                                        height = "4rem"
                                        class = "sapUiSmallMarginBeginEnd"/>
                                    <Text
                                        text = "Рейтинг доходности"
                                        class="H2"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L8 M6 S6"
                            indent="L2 M3 S3"/>
                    </layoutData>
                </CustomListItem>

                <CustomListItem
                        class="sapUiTinyMarginBottom">
                    <content>
                        <VBox
                            height = "7rem"
                            alignItems ="Center"
                            width = "100%"
                            class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <HBox
                                width = "100%"
                                height = "2rem"
                                alignItems = "Center"
                                justifyContent = "SpaceAround"
                                class = "sapUiSmallMarginEnd">
                                <Text
                                    text ="Мой тариф:"
                                    class = "H2"  />
                                <core:Icon
                                    press="onChangeTariff"
                                    src="sap-icon://edit-outside"
                                    color = "#346187"
                                    width = "2rem"
                                    height = "2rem"
                                    size= "2rem"/>
                            </HBox>
                            <Text
                                text ="{= ${mainModel>/tariff} + '%'}"
                                class = "coloredText sapUiTinyMarginTop"/>
                        </VBox>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L3 M2 S2"
                            indent="L2 M3 S3" />
                    </layoutData>
                </CustomListItem>

                <CustomListItem
                    class="sapUiTinyMarginBottom">
                    <content>
                        <VBox
                            height = "7rem"
                            width = "94%"
                            justifyContent = "SpaceAround"
                            class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom">
                            <Text
                                text ="Прогнозируемая пенсия:"
                                class = "H2"
                                textAlign = "Begin"
                                width = "100%"/>
                            <Text
                                text ="{mainModel>/pensionForecast} ₽/мес."
                                textAlign = "Center"
                                width = "100%"
                                class = "H1"/>
                            <HBox
                                width = "100%"
                                justifyContent = "End" >
                                <core:Icon
                                    src="sap-icon://edit-outside"
                                    color = "#346187"
                                    width = "2rem"
                                    height = "1rem"
                                    size= "1rem"/>
                                <Link
                                    text ="Узнать, как получить больше"
                                    textAlign = "End"
                                    width = "100%"
                                    class ="link"/>
                            </HBox>
                        </VBox>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L5 M4 S4" />
                    </layoutData>
                </CustomListItem>
                <CustomListItem>
                    <content>
                        <suite:ChartContainer
                            autoAdjustHeight="false"
                            title="График поступлений"
                            showLegend="false"
                            showZoom="false"
                            showLegendButton="false">

                            <suite:content>
                                <suite:ChartContainerContent>
                                    <suite:content>
                                        <viz:VizFrame
                                            id="idVizFrame"
                                            uiConfig="{applicationSet:'fiori'}"
                                            vizType='line'
                                            vizProperties="{techModel>/diagrammProperties}">
                                            <viz:dataset>
                                                <viz.data:FlattenedDataset
                                                    data="{
                                                        path:'mainModel>/operationsHistory'
                                                    }">
                                                    <viz.data:dimensions>
                                                        <viz.data:DimensionDefinition
                                                            name="Date"
                                                            value="{
                                                                path:'mainModel>timestamp',
                                                                formatter:'.formatter.formatDate'
                                                                }"/>
                                                    </viz.data:dimensions>
                                                    <viz.data:measures>
                                                        <viz.data:MeasureDefinition
                                                            name="Salary"
                                                            value="{mainModel>amount}" />
                                                    </viz.data:measures>
                                                </viz.data:FlattenedDataset>
                                            </viz:dataset>
                                            <viz:feeds>
                                                <viz.feeds:FeedItem
                                                    id='valueAxisFeed'
                                                    uid="valueAxis"
                                                    type="Measure"
                                                    values="Salary"/>
                                                <viz.feeds:FeedItem
                                                    id='categoryAxisFeed'
                                                    uid="categoryAxis"
                                                    type="Dimension"
                                                    values="Date" />
                                            </viz:feeds>
                                        </viz:VizFrame>
                                    </suite:content>
                                </suite:ChartContainerContent>
                            </suite:content>
                            <suite:toolbar>
                                <OverflowToolbar>
                                    <ToolbarSpacer/>
                                    <Select>
                                        <items>
                                            <core:Item text="За последний год" />
                                            <core:Item text="За все время" />
                                        </items>
                                    </Select>
                                    <suite:ChartContainerToolbarPlaceholder></suite:ChartContainerToolbarPlaceholder>
                                </OverflowToolbar>
                            </suite:toolbar>
                        </suite:ChartContainer>
                    </content>
                    <layoutData>
                        <l:GridData
                            span="L8 M2 S2"
                            indent="L2 M3 S3" />
                    </layoutData>
                </CustomListItem>

            </l:content>
        </l:Grid>
    </Page>


</mvc:View>