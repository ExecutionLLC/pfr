    <form:Form
        editable="true">
        <form:formContainers>
            <form:FormContainer>
                <form:FormElement
                    label="{i18n>totalMany}">
                    <Text text="500 000, 18 рублей"/>
                </form:FormElement>
                <form:FormElement
                    label="Движение средств за период">
                    <DateRangeSelection
                        placeholder="Выберите диапазон дат"
                        change="onDateRangeChange">
                        <layoutData>
                            <layout:GridData
                                span="L4 M5 S4"/>
                        </layoutData>
                    </DateRangeSelection>
                    <ToggleButton
                        pressed="{techModel>/isButtonShowApply}"
                        width="100%"
                        text="Показать">
                        <layoutData>
                            <layout:GridData
                                span="L2 M3 S7"
                                indent="L0 M0 S0"/>
                        </layoutData>
                    </ToggleButton>
                    <Button
                        press="onPrint"
                        icon="sap-icon://print">
                        <layoutData>
                            <layout:GridData
                                    span="L2 M2 S2"/>
                        </layoutData>
                    </Button>
                </form:FormElement>
            </form:FormContainer>
        </form:formContainers>
        <form:layout>
            <form:ResponsiveGridLayout
                columnsL="1"
                columnsM="1"
                columnsS="1"/>
        </form:layout>
    </form:Form>

