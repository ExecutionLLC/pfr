<!--дополнительное поле информации при нажатой кнопке-->
    <form:Form
            visible="{techModel>/isButtonShowApply}"
            editable="true">
        <form:formContainers>
            <form:FormContainer>
                <form:FormElement
                    label="Входящий остаток на 07.05.2014">
                    <Text text="174 179, 19 рублей">
                        <layoutData>
                            <layout:GridData
                                span="L2 M3 S7"/>
                        </layoutData>
                    </Text>
                </form:FormElement>
                <form:FormElement
                    label="Исходящий остаток на 07.05.2017">
                    <Text text="188 469б 72 рублей">
                        <layoutData>
                            <layout:GridData
                                    span="L2 M3 S7"/>
                        </layoutData>
                    </Text>
                </form:FormElement>
                <form:FormElement
                    label="Итого движения денежных средств по счету за период">
                    <Text text="14 317 рублей">
                        <layoutData>
                            <layout:GridData
                                    span="L2 M3 S7"/>
                        </layoutData>
                    </Text>
                </form:FormElement>
            </form:FormContainer>
        </form:formContainers>
        <form:layout>
            <form:ResponsiveGridLayout
                labelSpanXL ="3"
                labelSpanL="3"
                labelSpanM ="4"
                labelSpanS ="3"
                columnsL="1"
                columnsM="1"
                columnsS="1"/>
        </form:layout>
    </form:Form>
