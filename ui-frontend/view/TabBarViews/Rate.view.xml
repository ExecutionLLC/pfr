<mvc:View
    controllerName="personal.account.controller.TabBarControllers.Rate"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">
    <form:Form>
        <form:formContainers>
            <form:FormContainer>
                <form:FormElement
                    label="Ваш текущий тариф">
                    <Input
                        type = "Text">
                        <layoutData>
                            <layout:GridData
                                span="L4 M4 S4"/>
                        </layoutData>
                    </Input>
                </form:FormElement>


            </form:FormContainer>
        </form:formContainers>
        <form:layout>
            <form:ResponsiveGridLayout
                    columnsL="1"
                    columnsM="1"
                    columnsS="1"/>
        </form:layout>
    </form:Form>
    <Slider min="0" max="30" enableTickmarks="true" class="sapUiSmallMarginBottom" width="400px">
        <ResponsiveScale tickmarksBetweenLabels="3"/>
    </Slider>
</mvc:View>