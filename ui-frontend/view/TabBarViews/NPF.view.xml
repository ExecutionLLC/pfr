<mvc:View controllerName="personal.account.controller.TabBarControllers.NPF"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:form="sap.ui.layout.form"
          xmlns:core="sap.ui.core"
          xmlns:layout="sap.ui.layout"
          displayBlock="true"
>
    <Page showHeader="false">
        <layout:Grid width="100%">
            <Label class="sapUiSmallMarginTop"
                   text="Текущий НПФ:">
                <layoutData>
                    <layout:GridData span="L2 M4 S4" indent="L1 M1 S1"/>
                </layoutData>
            </Label>
            <Text
                    class="sapUiSmallMarginTop text-bold"
                    text="{
                        path:'mainModel>/npf',
                        formatter:'.formatter.formatNpfAddressToName'
                    }"
            >
                <layoutData>
                    <layout:GridData span="L4 M4 S4"/>
                </layoutData>
            </Text>
            <Label
                    class="sapUiSmallMarginTop"
                    text="Рейтинг надежности:">
                <layoutData>
                    <layout:GridData span="L2 M4 S4"/>
                </layoutData>
            </Label>
            <Text class="sapUiSmallMarginTop"
                  text="{
                    path:'mainModel>/npf',
                    formatter:'.formatter.formatNpfRating'
                  }">
                <layoutData>
                    <layout:GridData
                            span="L1 M4 S4"/>
                </layoutData>
            </Text>
        </layout:Grid>
        <layout:Grid width="100%">
            <Label class="sapUiSmallMarginTop"
                   text="Новый НПФ:"
            >
                <layoutData>
                    <layout:GridData span="L2 M4 S4" indent="L1 M1 S1"/>
                </layoutData>
            </Label>
            <Text class="sapUiSmallMarginTop text-bold"
                  text="{techModel>/tech/changeNpfTab/selectedNpf}"
            >
                <layoutData>
                    <layout:GridData span="L4 M4 S4"/>
                </layoutData>
            </Text>
            <Label id="changeNpfLabel"
                   class="sapUiSmallMarginTop"
                   text="Возможная дата смены НПФ:"
                   visible="{techModel>/tech/changeNpfTab/isNextMinTimeForChangeLabelVisible}"
            >
                <layoutData>
                    <layout:GridData span="L2 M4 S4"/>
                </layoutData>
            </Label>
            <Text class="sapUiSmallMarginTop"
                  text="{techModel>/tech/changeNpfTab/nextMinTimeForChangeMessage}"
            >
                <layoutData>
                    <layout:GridData span="L1 M4 S4"/>
                </layoutData>
            </Text>
            <Button width="100%"
                    press="onSelectButton"
                    text="Выбрать НПФ"
                    enabled="{techModel>/tech/changeNpfTab/isSelectButtonEnabled}"
            >
                <layoutData>
                    <layout:GridData span="L2 M3 S7"/>
                </layoutData>
            </Button>
        </layout:Grid>

        <!--Таблица для выбора нового НПФ-->
        <Table visible="{techModel>/tech/changeNpfTab/isNextNpfTableVisible}"
               items="{
                    path:'npfModel>/'

               }"
        >
            <columns>
                <Column hAlign="Center">
                    <Text text="НПФ"/>
                </Column>
                <Column hAlign="Center">
                    <Text text="Рейтинг надежности"/>
                </Column>
                <Column hAlign="Center">
                    <Text text="Рейтинг доходности"/>
                </Column>
                <Column hAlign="Center">
                    <Text text="Перейти на сайт"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem visible="{
                                    parts:[
                                        {path:'npfModel>address'},
                                        {path:'mainModel>/npf'}
                                    ],
                                    formatter:'.formatter.formatColumnListItem'
                                }"
                                type="Active"
                                press="onSelectNpfTableItem"
                >
                    <cells>
                        <Text text="{npfModel>name}"/>
                        <Text text="{
                                        path:'npfModel>address',
                                        formatter:'.formatter.formatNpfRating'
                                    }"
                        />
                        <Text text="{npfModel>ratingOfIncomeRate}"/>
                        <core:Icon
                                src="sap-icon://hello-world"
                                press="onIconPress"
                                size="2rem"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!--конец-->

        <!--доп контейнер подтверждения смены НПФ-->
        <layout:Grid>
            <ObjectStatus
                    class="sapUiSmallMarginTop"
                    text="{techModel>/tech/changeNpfTab/changeNpfMessage}"
                    state="{techModel>/tech/changeNpfTab/changeNpfMessageType}">
                <layoutData>
                    <layout:GridData
                            span="L5 M3 S7"
                            indent="L1 M8 S8"/>
                </layoutData>
            </ObjectStatus>
            <Button
                    width="100%"
                    press="onApplyButton"
                    text="{techModel>/tech/changeNpfTab/applyButtonText}"
                    visible="{techModel>/tech/changeNpfTab/isApplyButtonVisible}">
                <layoutData>
                    <layout:GridData
                            span="L2 M3 S7"
                            indent="L4 M8 S8"/>
                </layoutData>
            </Button>
        </layout:Grid>
        <!--конец-->
        <Label
                text="История смены НПФ"
                class="sapUiLargeMarginBegin sapUiLargeMarginTop label-font_style"/>
        <!--Таблица-->
        <ScrollContainer vertical="false" horizontal = "true">
            <Table
            showNoData="false">
                <columns>
                    <Column hAlign="Center">
                        <Text text="Дата операции"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="НПФ"/>
                    </Column>
                    <Column
                            hAlign="Center">
                        <Text text="Статус"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Проверить операцию"/>
                    </Column>
                </columns>
            </Table>
            <ScrollContainer vertical = "true" horizontal="false">

                <Table
                        items="{
                            path:'techModel>/tech/changeNpfTab/npfTableData',
                            sorter : {
                                path : 'timestamp',
                                descending:true
                            }
                        }">
                    <columns>
                        <Column
                                hAlign="Center">
                        </Column>
                        <Column
                                hAlign="Center">
                        </Column>
                        <Column
                                hAlign="Center">
                        </Column>
                        <Column
                                hAlign="Center">
                        </Column>
                    </columns>
                    <items>
                        <CustomListItem>
                            <Panel
                                    expandable="true"
                                    expand="false"
                                    width="auto">
                                <headerToolbar>
                                    <Toolbar
                                        width="100%">
                                        <content>
                                            <Text
                                                textAlign="Center"
                                                width="17%"
                                                text="{
                                                path: 'techModel>timestamp',
                                                formatter:'.formatter.formatDateForTable'
                                            }"/>
                                            <Text
                                                textAlign="Center"
                                                width="32%"
                                                text="{
                                                path:'techModel>npf',
                                                formatter:'.formatter.formatNpfAddressToName'
                                            }"/>
                                            <core:Icon
                                                    width="17%"
                                                    src="sap-icon://overlay"
                                                    color= "{
                                        path: 'techModel>isFinished',
                                        formatter: '.formatter.formatTableItemStatus'
                                   }"/>
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <content>
                                    <Text
                                            text="ID Транзакции"/>
                                    <Text
                                            text="Отправитель"/>
                                    <Text
                                            text="Количество подтверждений"/>
                                </content>
                            </Panel>
                        </CustomListItem>
                    </items>
                </Table>

            </ScrollContainer>
        </ScrollContainer>
    </Page>
</mvc:View>